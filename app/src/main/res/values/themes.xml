<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BP_Recorder_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <item name="android:fontFamily">@font/poppins_regular</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/bottomsheet_Bg_theme</item>

        <item name="materialCalendarFullscreenTheme">@style/CustomThemeOverlay_MaterialCalendar_Fullscreen</item>

    </style>


    <style name="Popins.Semibold.black" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>

    </style>





    <style name="TopBarTheme" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">@color/white</item>

    </style>


    <style name="TopBarTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TopBarSubTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="Main.CardHeadingsTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="Main.SubTextsTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="bottomsheet_Bg_theme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.MainBGTheme</item>
    </style>

    <style name="BottomSheet.MainBGTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>



    <style name="Bottomsheet.TextsTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="AddRecordTextviewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Generic.NumberPickerTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/tab_selected_color</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>


    <style name="Generic.RoundButton" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:backgroundTint">@color/tab_selected_color</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>

        <item name="android:textAllCaps">false</item>

    </style>






















    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>




    <style name="custom_chip_style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
    </style>


    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="dateRangeTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        
        <item name="android:windowFullscreen">false</item>
    </style>


    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_bg</item>
    </style>

    <style name="toggleButton" parent="Theme.BP_Recorder_App">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@drawable/toggle_text_color</item>
    </style>
</resources>