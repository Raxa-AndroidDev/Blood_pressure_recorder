<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashScreen"
    android:background="@color/tab_selected_color">





    <View
        android:id="@+id/view1"
        android:layout_width="3dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="@+id/tv_splash_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_splash_subtext"
        android:background="@color/red"/>
    
    
    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_title"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toEndOf="@+id/view1"/>


    <TextView
        android:id="@+id/tv_splash_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your professional data\nhealth manager"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#99FFFFFF"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintTop_toBottomOf="@+id/tv_splash_title"
        app:layout_constraintStart_toStartOf="@+id/tv_splash_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>